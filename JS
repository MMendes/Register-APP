var A = {

    //calculate the total invoiced for the day
    //first get daytotal and display its value as "0â‚¬"
    calcTotalInvoiced: function () {
        var tInvoiced = document.getElementById("daytotal");
        //get the value of lastinvoiced and use the onchange event listener
        //setting a function to it that will check for the value passed to lastInvoiced
        //If typeof lastInvoiced is not a number display a message prompting to insert a value
        //if lastInvoice is a number, then use parseFloat to set it as a floating point number a return this 
        //for later use
        var lastInvoiced = document.getElementById("lastinvoiced").value;
        lastInvoiced.onchange = (function () {
            if (typeof lastInvoiced !== "number") {
                lastInvoiced.innerHTML = "Insert value";
            } else { 
                return parseFloat("lastInvoiced");
            }
        }());
    }
};
